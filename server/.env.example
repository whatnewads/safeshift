# SafeShift EHR Environment Configuration
# Copy this file to .env and fill in your values
# NEVER commit .env to version control

# =============================================================================
# Amazon SES SMTP Configuration (Required for email functionality)
# =============================================================================

# SES SMTP Host (AWS region-specific)
SES_SMTP_HOST=email-smtp.us-east-1.amazonaws.com

# SES SMTP Port (587 for STARTTLS, 465 for SSL)
SES_SMTP_PORT=587

# SES SMTP Credentials (from AWS IAM)
# Create SMTP credentials in AWS SES console: https://console.aws.amazon.com/ses/
SES_SMTP_USER=YOUR_SES_SMTP_USERNAME
SES_SMTP_PASS=YOUR_SES_SMTP_PASSWORD

# Sender email (must be verified in SES)
SES_SMTP_FROM_EMAIL=noreply@yourdomain.com
SES_SMTP_FROM_NAME=SafeShift EHR

# =============================================================================
# Application Configuration
# =============================================================================

# Application base URL (no trailing slash)
APP_BASE_URL=https://yourdomain.com

# Application name
APP_NAME=SafeShift EHR

# Environment (development, staging, production)
APP_ENV=production

# Debug mode (true/false) - ALWAYS false in production
APP_DEBUG=false

# =============================================================================
# Database Configuration
# =============================================================================

DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=safeshift_ehr
DB_USERNAME=your_db_user
DB_PASSWORD=your_db_password
DB_CHARSET=utf8mb4

# =============================================================================
# Session Configuration
# =============================================================================

# Session lifetime in seconds (default: 3600 = 1 hour)
SESSION_LIFETIME=3600

# Session cookie name
SESSION_NAME=safeshift_session

# =============================================================================
# Security Configuration
# =============================================================================

# JWT secret key (generate a strong random string)
JWT_SECRET=your-very-long-random-secret-key-here

# Password hashing cost (10-12 recommended)
BCRYPT_COST=12

# =============================================================================
# Email Debug (Development only)
# =============================================================================

# Enable SMTP debugging to file (true/false)
# When true, SMTP conversation is logged to logs/email_smtp.log
SMTP_DEBUG=false

# =============================================================================
# Rate Limiting
# =============================================================================

# Max 2FA codes per hour per user
MAX_2FA_CODES_PER_HOUR=5

# 2FA code expiry in minutes
CODE_EXPIRY_MINUTES=10

# Max email reminders per user per week
MAX_REMINDERS_PER_WEEK=2
