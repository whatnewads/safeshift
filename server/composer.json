{
    "name": "safeshift/ehr-system",
    "description": "SafeShift EHR - HIPAA-compliant Occupational Health Electronic Health Records System",
    "type": "project",
    "license": "proprietary",
    "authors": [
        {
            "name": "Newads, LLC",
            "email": "wes.yielding@newadsoriginals.com"
        }
    ],
    "require": {
        "php": ">=8.0",
        "phpmailer/phpmailer": "^6.9",
        "ext-pdo": "*",
        "ext-pdo_mysql": "*",
        "ext-mbstring": "*",
        "ext-openssl": "*",
        "ext-json": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        "psr-4": {
            "App\\": "includes/",
            "App\\Core\\": "model/Core/",
            "App\\Repositories\\": "core/Repositories/",
            "Core\\": "core/",
            "Model\\": "model/",
            "ViewModel\\": "ViewModel/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "php-http/discovery": true
        }
    },
    "scripts": {
        "post-install-cmd": [
            "@php -r \"if (!file_exists('includes/config.php')) { echo 'Please create includes/config.php from config.php.example\\n'; }\""
        ],
        "test": "phpunit tests/"
    }
}