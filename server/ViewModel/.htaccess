# Deny all direct access to ViewModel files
# ViewModel files should only be included via PHP, never accessed directly
#
# This is part of the MVVM architecture - ViewModels handle business logic
# and should never be exposed to direct web requests

# Apache 2.4+ syntax
<IfModule mod_authz_core.c>
    Require all denied
</IfModule>

# Apache 2.2 fallback syntax
<IfModule !mod_authz_core.c>
    Order deny,allow
    Deny from all
</IfModule>

# Additional protection: Block all file types
<FilesMatch ".*">
    <IfModule mod_authz_core.c>
        Require all denied
    </IfModule>
    <IfModule !mod_authz_core.c>
        Order deny,allow
        Deny from all
    </IfModule>
</FilesMatch>